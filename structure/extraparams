#define NOADMIX 0 // NOADMIX (0=admixture, 1=no-admixture)
#define LINKAGE 0 // LINKAGE (use linkage model)
#define USEPOPINFO 0 // USEPOPINFO (use prior population info)
#define LOCPRIOR 0 // LOCPRIOR (use location info to improve weak data)
#define FREQSCORR 1 // FREQSCORR (allele frequencies are correlated among pops)
#define ONEFST 0 // ONEFST (same value of Fst for all)
#define INFERALPHA 1 // INFERALPHA (infer admixture parameter)
#define POPALPHAS 0 // POPALPHAS (individual alpha per population)
#define ALPHA 1.0 // ALPHA (initial Dirichlet parameter)
#define INFERLAMBDA 0 // INFERLAMBDA (infer lambda)
#define POPSPECIFICLAMBDA 0 // POPSPECIFICLAMBDA (separate lambda for each pop)
#define LAMBDA 1.0 // LAMBDA (allele frequency Dirichlet parameter)
